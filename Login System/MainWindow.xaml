<Window x:Class="Login_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login_System"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="250">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Name="lblUsername" Content="username" Margin="5"/>
            <TextBox Name="txtUsername" Margin="5"/>
            <Label Name="lblPassword" Content="password" Margin="5"/>
            <TextBox Name="txtPassword" Margin="5"/>
            <Button Name="btnLogin" Content="Log In" Margin="5" Click="btnLogin_Click"/>
            <Button Name="btnRegister" Content="Register" Margin="5" Click="btnRegister_Click"/>
            <Button Name="btnDelete" Content="Delete" Margin="5" Click="btnDelete_Click"/>

        </StackPanel>
    </Grid>
</Window>
